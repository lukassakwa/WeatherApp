<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/hourOdDay">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5px">

        <TextView
                android:text="12:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hourTextView"
                android:padding="5px"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:textAlignment="center"
                android:layout_marginTop="5dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView" app:layout_constraintTop_toBottomOf="@+id/hourTextView"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="2dp" tools:srcCompat="@drawable/ic_audiotrack_dark"/>
        <TextView
                android:text="Weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weatherTempItemTextView"
                app:layout_constraintTop_toBottomOf="@+id/weatherDescriptionItem" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center"
                android:layout_marginTop="2dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp" android:layout_marginStart="2dp" android:layout_marginEnd="2dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="200px"
                android:layout_height="wrap_content" android:id="@+id/weatherDescriptionItem"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="2dp"
                android:layout_marginStart="5dp" android:layout_marginEnd="5dp" android:textAlignment="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.LinearLayoutCompat>